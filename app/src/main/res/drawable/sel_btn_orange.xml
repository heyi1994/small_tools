<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/md_orange_100">
    <item>
        <selector >

            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_orange_300"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <item android:state_enabled="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_orange_500"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>

            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_grey_500"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
        </selector>

    </item>
</ripple>