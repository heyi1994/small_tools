<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/md_deep_orange_A100">
    <item>
        <selector >

            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_red_200"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
            <item  android:state_enabled="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_red_A701"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>

            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/md_grey_500"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
        </selector>
    </item>
</ripple>